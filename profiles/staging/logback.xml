<?xml version="1.0" encoding="UTF-8" ?>

<configuration scan="true" scanPeriod="3 seconds">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <layout>
            <pattern>
                [%d{HH:mm:ss.SSS}][%thread][%-5level][%logger{32}][%class{32}.%method\(\):%line] - %msg%n
            </pattern>
        </layout>
    </appender>

    <appender name="System" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <fileNamePattern>/tmp/system_stag-%d{yyyy-MM-dd}.log</fileNamePattern>
        <layout>
            <pattern>
                [%d{HH:mm:ss.SSS}][%thread][%-5level] - %msg%n
            </pattern>
        </layout>
    </appender>

    <appender name="Debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/tmp/debug_stag.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <layout>
            <pattern>
                [%d{HH:mm:ss.SSS}] - %msg%n
            </pattern>
        </layout>
    </appender>

    <logger name="SYSTEM_LOG"
            additivity="false"
            level="INFO">
        <appender-ref ref="Debug"/>
        <appender-ref ref="System" />
        <appender-ref ref="console" />
    </logger>

    <logger name="DEBUG_LOG"
            additivity="false"
            level="Debug">
        <appender-ref ref="Debug"/>
        <appender-ref ref="console" />
    </logger>

    <root level="Info">
        <appender-ref ref="console" />
    </root>

</configuration>
